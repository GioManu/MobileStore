@model Product

<div class="container">
    <div class="card" style="width:30%;display:inline-block;margin: 10px;">
        <img src="@Model.Images.FirstOrDefault()" class="card-img-top" style="max-height:200px;max-width:300px;">
        <div class="card-body" style="text-align:center;">
            <h5 class="card-title">@Model.Name</h5>
            <a href="#" class="btn btn-success">@Model.Price ლარი</a>
        </div>
    </div>
</div>
@model Product

<div class="card" style="width:30%;display:inline-block;margin: 10px;">
    @if (!Model.Images.Any())
    {
        <img src="https://icon-library.net/images/no-image-icon/no-image-icon-5.jpg" class="card-img-top" style="max-height:200px;max-width:300px;">
    }
    else
    {
        <img src="@Model.Images.FirstOrDefault().ImageUrl" class="card-img-top" style="max-height:200px;max-width:300px;">
    }
    <div class="card-body" style="text-align:center;">
        <h5 class="card-title">@Model.Name</h5>
        <a asp-controller="Home" asp-action="Product" asp-route-productId="@Model.MobileProductID" class="btn btn-success">@Model.Price ლარი</a>
    </div>
</div>
